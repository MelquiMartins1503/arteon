generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  extensions = [pg_graphql(schema: "graphql"), pg_stat_statements(schema: "extensions"), pgcrypto(schema: "extensions"), supabase_vault(schema: "vault"), uuid_ossp(schema: "extensions"), vector(schema: "extensions")]
  schemas = ["public"]
}

